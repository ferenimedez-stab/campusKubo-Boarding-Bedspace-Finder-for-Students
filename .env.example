# CampusKubo Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Database Configuration
# Path to SQLite database file (default: app/storage/campuskubo.db)
# DB_FILE=app/storage/campuskubo.db

# SQLCipher encryption key (optional, for encrypted database)
# Leave empty or remove for unencrypted SQLite
# DB_ENCRYPTION_KEY=your-secret-encryption-key-here

# Application Settings
# Force seeding of demo data (1=yes, 0=no)
CAMPUSKUBO_FORCE_SEED=0

# Security Settings
# Secret key for session management and CSRF tokens
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-replace-with-random-hex-string

# Session timeout in minutes (default: 60)
SESSION_TIMEOUT_MINUTES=60

# Login attempt limits
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Application Environment
# Options: development, staging, production
APP_ENV=development

# Debug mode (true/false)
DEBUG_MODE=false

# Logging
LOG_LEVEL=INFO

# Email Configuration (for password reset, notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@campuskubo.com

# Google Maps API (for location features)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Upload Settings
MAX_UPLOAD_SIZE_MB=5
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Payment Gateway (if applicable)
# PAYMENT_API_KEY=your-payment-api-key
# PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Admin Account (for initial setup)
# ADMIN_EMAIL=admin@campuskubo.com
# ADMIN_PASSWORD=change-me-immediately

# Application URLs
# BASE_URL=http://localhost:8000
# FRONTEND_URL=http://localhost:8000
