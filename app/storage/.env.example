# Environment variables for CampusKubo
# Copy this file to .env and update the values

SECRET_KEY=change_me_with_random_value

# Database configuration
DATABASE_URL=storage/data/campuskubo.db

# Default admin account (created on first run)
DEFAULT_ADMIN_EMAIL=admin@campuskubo.local
DEFAULT_ADMIN_PASSWORD=Admin123!

# Email configuration
MAIL_SENDER=noreply@campuskubo.local
MAIL_ADAPTER=console

# Session and security settings
SESSION_TIMEOUT_MINUTES=10
TOKEN_EXPIRY_MINUTES=30
PASSWORD_RESET_EXPIRY_MINUTES=1

# Rate limiting
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# File storage
FILE_STORAGE_PATH=storage/uploads

# Password requirements
MIN_LENGTH_PASSWORD=8
