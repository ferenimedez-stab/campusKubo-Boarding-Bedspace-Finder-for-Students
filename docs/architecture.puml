@startuml
title CampusKubo - Simple Architecture

skinparam componentStyle rectangle

package "Client" {
  [Flet UI] as FLET
}

package "Application" {
  [Views & Components] as VIEWS
  [SessionState & Navigation] as SESS
  [Services Layer] as SERVICES
}

package "Storage" {
  database "SQLite (campuskubo.db)" as DB
  folder "Local uploads (assets/uploads)" as UPLOADS
}

cloud "External APIs" as EXT
rectangle "Real-time Server (WebSocket)" as WS
rectangle "AI Inference (local or cloud)" as AI

FLET --> VIEWS
VIEWS --> SESS
VIEWS --> SERVICES
SERVICES --> DB
SERVICES --> UPLOADS
SERVICES --> EXT
SERVICES --> WS
SERVICES --> AI

note right of SERVICES
  auth_service
  listing_service
  reservation_service
  notification_service
end note

@enduml
